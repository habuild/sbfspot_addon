#!/usr/bin/with-contenv bashio
# ==============================================================================
# Start the SBFspot service
# s6-overlay docs: https://github.com/just-containers/s6-overlay
# ==============================================================================

#!/bin/sh
set -e

echo 'Show all runlevels and their services.'
rc-status -a

echo 'Show all services.'
rc-status -s

# --- GENERATE CONFIG --
echo "PWD is current directory $(pwd)"
cd / 

echo "PWD is current directory $(pwd)"
/etc/sbfspot/generateConfig.sh /data/sbfspot/SBFspot.cfg /data/sbfspot/SBFspotUpload.cfg /data/sbfspot


# ---- RUN ----
# start service
echo 'Starting daemon'
rc-service SBFspotUploadDaemon.service start

# cron
echo 'Starting cron in foreground'
/usr/sbin/crond -f

# echo 'Starting daemon'
# ./SBFspotUploadDaemon
